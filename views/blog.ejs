<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head')%>
        <title>Document</title>
</head>

<body>
    <%- include('./partials/nav') %>

        <div class="container my-4">

            <h1>
                <%= blog.title %>
            </h1>
            <img src="<%= blog.coverImageURL %>" width="700px" />

            <pre class="my-4"><%= blog.body %></pre>
        </div>
        <div class="container">
            <img src="<%= blog.createdBy.profileImageUrl %>" width="40px" />
            <%= blog.createdBy.fullName %>
        </div>

        <div class="container">
            <h3>Commments (<%= comments.length %>)</h3>
            <% if (locals.user) { %>
                <form action="/blog/comment/<%= blog._id %>" method="post">

                    <textarea class="form-control my-3" id="content" rows="3" name="content"
                        placeholder="Enter Your comment"></textarea>
                    <button type="submit" class="btn btn-primary mb-3">Comment</button>
                </form>
                <% } %>
                <div class="mt-3">
                    <% comments.forEach(comment=> { %>
                        <img src="<%= comment.createdBy.profileImageUrl %>" width="30px" />
                        <%= comment.createdBy.fullName %>
                       <pre style="margin-left: 2rem;"><%= comment.content %></pre> 
                        <% }) %>
                        
                        
                    
                </div>

            </div>
            


            <%- include('./partials/script')%>

</body>

</html>